{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-test",
    "noEmit": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@tests/*": ["__tests__/*"]
    },
    // Optimizations for faster compilation
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo-test"
  },
  "include": [
    "src/**/*",
    "src/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/__tests__/backup/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}